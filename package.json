{
  "name": "nostr-screenshot",
  "version": "1.0.0",
  "description": "A NodeJS library to generate screenshots of nostr notes on server",
  "scripts": {
    "dev": "tsc && npm run copyfiles && node dist/index.js",
    "copyfiles": "copyfiles -u 1 assets/**/* dist/assets/"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "nostr",
    "screenshot",
    "nostr-screenshot",
    "generator",
    "nostr-generator",
    "nostr-screenshot-generator",
    "screenshot-nostr"
  ],
  "author": "DJ Hemath",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.9.0",
    "copyfiles": "^2.4.1",
    "typescript": "^5.6.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/djhemath/nostr-screenshot.git"
  },
  "dependencies": {
    "@napi-rs/canvas": "^0.1.60",
    "@nostr-dev-kit/ndk": "^2.10.5",
    "nostr-tools": "^2.10.1",
    "ts-node": "^10.9.2"
  },
  "type": "module"
}
